	// Invalid password
	@Test
	public void verifyInValidPasswordLogin(){		
		
		// calling login page 	
		LoginPage login = new LoginPage(driver);
		driver=login.typeUsername("chandra.lipika@gmail.com");
		driver=login.typePassword("sushant@845");
		driver = login.clickLogin();
		
		driver.manage().timeouts().implicitlyWait(20 , TimeUnit.SECONDS);
		String actualText = driver.findElement(By.xpath("//div[@id='login_error']")).getText();
		System.out.println(actualText);
		Assert.assertEquals(actualText,"ERROR");
			
	}
	
